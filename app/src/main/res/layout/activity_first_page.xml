<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/pureWhite"
    tools:context="luche.template.oneshot.ubiquo.com.luche.FirstPage"
    android:id="@+id/firstPageViewGroup">



        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pureBlack"
            android:visibility="gone" />



            <View
                android:id="@+id/first_separator"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="32dp"
                android:background="@drawable/inverse_main_gradient" />

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/img"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_below="@+id/first_separator"
                android:src="@drawable/luche_logo_transparent" />

            <View
                android:id="@+id/second_separator"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/img"
                android:background="@drawable/main_gradient" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/phoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:text="Phone"
            android:textColor="@color/pureWhite"
            android:visibility="gone" />



</RelativeLayout>
